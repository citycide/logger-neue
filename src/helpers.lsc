import { statSync } from 'fs-extra'

export isNil (value) ->
  value == null or value == undefined

export isObject (value) ->
  value == Object(value) and !Array.isArray(value)

export isDirectory (path) ->
  try:
    return statSync(path).isDirectory()
  catch err:
    if err.code != 'ENOENT' and err.code != 'ENOTDIR':
      throw err

  false
