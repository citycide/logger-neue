{
  "name": "logger-neue",
  "version": "1.0.0-alpha.1",
  "description": "Doing for Node logging what Neue did for Helvetica.",
  "author": {
    "name": "Bo Lingen",
    "email": "thecitycide@gmail.com",
    "url": "github.com/citycide"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/citycide/levers.git"
  },
  "homepage": "https://github.com/citycide/levers",
  "bugs": "https://github.com/citycide/levers/issues",
  "main": "dist/index.js",
  "engines": {
    "node": ">=4"
  },
  "keywords": [
    "logging",
    "node",
    "logger",
    "console",
    "colors",
    "chalk",
    "formatted"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "pretest": "babel src -d dist -x .lsc",
    "watch": "npm run pretest -- -w",
    "test": "ava"
  },
  "dependencies": {
    "assign-deep": "^0.4.5",
    "chalk": "^1.1.3",
    "fast-safe-stringify": "^1.1.11",
    "fs-promise": "^2.0.1",
    "strat": "^1.0.0-alpha.1"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-preset-lightscript": "^0.3.0",
    "eslint": "^3.11.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1"
  },
  "ava": {
    "files": [
      "tests/**/*.js"
    ],
    "verbose": true,
    "babel": "inherit"
  },
  "babel": {
    "presets": ["lightscript"],
    "plugins": [
      "add-module-exports"
    ]
  }
}
